<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="PasswordSmoke">

    <test name="Password Tests" preserve-order="true">
        <classes>

            <class name="LoginTests" >
                        <methods>
                            <include name="verifyPasswordRequirements"/>
                            <include name="verifyNineCharPasswordFails"/>
                            <include name="verifyNoSpecialCharPasswordFails"/>
                            <include name="verifyLongPassword"/>
                            <include name="loginWrongPassword"/>
                            <include name="loginUpdatePassword"/>
                            <include name="verifyNoNumberCharPasswordFails"/>

                        </methods>
             </class>
        </classes>
    </test>

</suite>
